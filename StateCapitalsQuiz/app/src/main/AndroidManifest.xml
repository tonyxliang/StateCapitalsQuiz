<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uga.cs.statescapitalquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="State Capitals Quiz"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="State Capitals Quiz"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewQuizActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".QuizResultsActivity" />
        <activity android:name=".ViewQuizHistoryActivity" android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>